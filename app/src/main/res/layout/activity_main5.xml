<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logpers"
    tools:context=".MainActivity4">


    <ImageView
        android:id="@+id/ic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/gtr" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/ic"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D3D4DA"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="25dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/blocks"
            android:drawableLeft="@drawable/em"
            android:drawablePadding="5dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="11dp"
            android:textColor="@color/black"
            android:textColorHint="#A69A9A"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blocks"
            android:drawableLeft="@drawable/ps"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="11dp"
            android:textColor="@color/black"
            android:textColorHint="#A69A9A"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Forget Your Password?"
            android:textStyle="bold"
            android:textColor="#403D3D"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginTop="165dp"
            android:layout_marginRight="15dp"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Create New Account"
            android:textStyle="bold"
            android:textColor="#403D3D"
            android:layout_gravity="left"
            android:gravity="right"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="15dp"
            android:textSize="10dp"
            />


        <android.widget.Button
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/btn"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Log In"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


</RelativeLayout>